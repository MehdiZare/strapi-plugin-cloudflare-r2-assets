{
  "name": "strapi-plugin-cloudflare-r2-assets",
  "version": "0.1.0",
  "description": "Strapi 5 upload provider and plugin integration for Cloudflare R2 with edge image resizing.",
  "keywords": [
    "strapi",
    "strapi-plugin",
    "strapi-provider-upload",
    "cloudflare",
    "r2",
    "image-resizing"
  ],
  "homepage": "https://github.com/MehdiZare/strapi-plugin-cloudflare-r2-assets",
  "repository": {
    "type": "git",
    "url": "https://github.com/MehdiZare/strapi-plugin-cloudflare-r2-assets.git"
  },
  "license": "MIT",
  "author": "Mehdi Zare",
  "bugs": {
    "url": "https://github.com/MehdiZare/strapi-plugin-cloudflare-r2-assets/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/provider/index.js",
  "types": "./src/provider/index.d.ts",
  "files": [
    "dist",
    "src/provider/index.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./src/provider/index.d.ts",
      "source": "./src/provider/index.ts",
      "import": "./dist/provider/index.mjs",
      "require": "./dist/provider/index.js",
      "default": "./dist/provider/index.js"
    },
    "./strapi-admin": {
      "source": "./admin/src/index.ts",
      "import": "./dist/admin/index.mjs",
      "require": "./dist/admin/index.js",
      "default": "./dist/admin/index.js"
    },
    "./strapi-server": {
      "source": "./server/src/index.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js",
      "default": "./dist/server/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "strapi-plugin build",
    "watch": "strapi-plugin watch",
    "watch:link": "strapi-plugin watch:link",
    "verify": "strapi-plugin verify",
    "test": "vitest run",
    "test:watch": "vitest",
    "check:artifacts": "node ./scripts/check-artifacts.mjs",
    "release:check": "bun install && bun run build && npm test && npm run verify && npm run check:artifacts",
    "release:patch": "npm version patch -m \"chore(release): v%s\"",
    "release:minor": "npm version minor -m \"chore(release): v%s\"",
    "release:major": "npm version major -m \"chore(release): v%s\"",
    "preversion": "npm run release:check",
    "version": "bun run build && npm run check:artifacts && git add -f dist package.json bun.lock",
    "postversion": "echo \"Release commit and tag created. Push with: git push && git push --tags\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.1000.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@strapi/sdk-plugin": "^6.0.0",
    "@types/node": "^25.3.2",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@strapi/strapi": "^5.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.0.0",
    "styled-components": "^6.0.0"
  },
  "engines": {
    "node": ">=20.0.0 <21 || >=22.0.0 <=24.x.x",
    "npm": ">=10.0.0"
  },
  "strapi": {
    "name": "cloudflare-r2-assets",
    "displayName": "Cloudflare R2 Assets",
    "description": "Upload provider with Cloudflare R2 storage and Cloudflare edge image resizing.",
    "kind": "plugin"
  }
}
